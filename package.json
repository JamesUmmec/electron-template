{
	"name": "electron-template",
	"version": "1.0.0",
	"description": "Template of electron software development",
	"main": "dist/app/index.js",
	"scripts": {
		"test": "electron .",
		"watch.webpack": "webpack --watch",
		"watch.less": "less-watch-compiler --plugins clean-css ./less ./dist/web",
		"watch.app": "tsc -p ./app/tsconfig.json -w",
		"build.webpack": "webpack --mode production",
		"publish.win": "electron-builder --win"
	},
	"keywords": [
		"electron",
		"template",
		"demo",
		"learning"
	],
	"author": "JamesUmmex",
	"license": "MIT",
	"devDependencies": {
		"@types/jquery": "^3.5.5",
		"@types/vue": "^2.0.0",
		"electron": "^11.2.3",
		"electron-builder": "^22.9.1",
		"jquery": "^3.5.1",
		"less": "^4.1.1",
		"less-plugin-clean-css": "^1.5.1",
		"less-watch-compiler": "^1.14.6",
		"toml": "^3.0.0",
		"ts-loader": "^8.0.17",
		"typescript": "^4.1.5",
		"vue": "^2.6.12",
		"webpack": "^5.22.0",
		"webpack-cli": "^4.5.0"
	},
	"build": {
		"productName": "electron-template",
		"appId": "com.example.demo",
		"directories": {
			"output": "build"
		},
		"win": {
			"icon": "static/favicon.ico"
		}
	}
}
